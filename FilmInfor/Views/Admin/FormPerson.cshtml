
@{
    ViewData["Title"] = "Dashboard Movie";
    Layout = "~/Views/Admin/Shared/_LayoutAdmin.cshtml";
}
<div class="Dashboard container">
    <div class="row">
        <h1>Dashboard Movie</h1>
        @using (Html.BeginForm("AddPerson", "Admin", FormMethod.Post))
        {
        <div class="mb-3">
            <label for="Fullname" class="form-label">Fullname</label>
                <input  class="form-control" type="text" name="Fullname" id="Title" placeholder="Fullname" />
        </div>
        <div class="mb-3">
                <input  checked value="Nam" class="form-check-input" type="radio" name="Gender" id="flexRadioDefault1">
            <label class="form-check-label" for="flexRadioDefault1">
                Nam
            </label>
            <input  value="Nữ" class="form-check-input" type="radio" name="Gender" id="flexRadioDefault1">
            <label class="form-check-label" for="flexRadioDefault1">
                Nữ
            </label>
        </div>
            
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input class="form-control" type="text" name="Email" id="Title" placeholder="Email" />
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input  class="form-control" type="text" name="Password" id="Title" placeholder="Password" />
            </div>
        <div class="mb-3">
            <div class="form-check form-switch">
                    <input name="Type" value="1" class="form-check-input" type="checkbox" checked)>
                <label class="form-check-label" for="flexSwitchCheckChecked">Is Admin</label>
            </div>
        </div>
        
        <div class="mb-3">
            <div class="form-check form-switch">
                    <input name="active" value="true" class="form-check-input" type="checkbox" )>
                <label class="form-check-label" for="flexSwitchCheckChecked">Is Active</label>
            </div>
        </div>
     
            <div>
                <input type="submit" class="btn btn-primary" value="Save" />
                
                <button onclick="location.href='@Url.Action("DashboardPerson", "Admin")'" type="button" class="btn btn-danger">Cancel</button>
            </div>
        }

    </div>
</div>
