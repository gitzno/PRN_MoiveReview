@model List<Genre>

@{
    ViewData["Title"] = "Dashboard Genre";
    Layout = "~/Views/Admin/Shared/_LayoutAdmin.cshtml";
}
<div class="Dashboard container">
    <div class="row">
        <h1>Dashboard Genre</h1>

        <table class="table table-bordered col-lg-12">
            <tr>
                <th>GenreId</th>
                <th>Description</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GenreId</td>
                    <td>@item.Description</td>
                    <td>
                        <button onclick="location.href='@Url.Action("", "Admin", item)'" type="button" class="btn btn-primary">Edit</button>
                     </td>
                </tr>
            }
        </table>
        <button onclick="location.href='@Url.Action("FormGenre", "Admin")'" type="button" class="btn btn-primary">Create Genre</button>
    </div>
</div>